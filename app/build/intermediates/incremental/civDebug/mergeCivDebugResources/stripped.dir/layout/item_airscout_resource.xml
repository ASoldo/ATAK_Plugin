<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/resourceRoot"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="8dp"
    android:background="@drawable/bg_resource_card"
    android:foreground="?android:attr/selectableItemBackground"
    android:orientation="vertical"
    android:padding="12dp">

    <TextView
        android:id="@+id/resourceName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@android:color/white"
        android:textSize="16sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/resourceDescription"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:textColor="#B3FFFFFF"
        android:textSize="14sp"
        android:visibility="gone" />

    <TextView
        android:id="@+id/resourceStream"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        android:drawableStart="@drawable/ic_stream"
        android:drawablePadding="6dp"
        android:maxLines="1"
        android:ellipsize="end"
        android:textColor="#B3FFFFFF"
        android:textSize="13sp" />

    <TextView
        android:id="@+id/resourceControl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:drawableStart="@drawable/ic_control"
        android:drawablePadding="6dp"
        android:maxLines="1"
        android:ellipsize="end"
        android:textColor="#B3FFFFFF"
        android:textSize="13sp" />

    <TextView
        android:id="@+id/resourceLocation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:drawableStart="@drawable/ic_location"
        android:drawablePadding="6dp"
        android:textColor="#B3FFFFFF"
        android:textSize="13sp" />

    <TextView
        android:id="@+id/resourceFrustum"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:drawableStart="@drawable/ic_frustum"
        android:drawablePadding="6dp"
        android:textColor="#B3FFFFFF"
        android:textSize="13sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:gravity="end"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/previewButton"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_marginEnd="6dp"
            android:background="?android:attr/selectableItemBackgroundBorderless"
            android:contentDescription="@string/resource_action_preview"
            android:padding="6dp"
            android:src="@drawable/ic_preview"
            android:tint="#FFFFFFFF" />

        <ImageButton
            android:id="@+id/editButton"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_marginEnd="6dp"
            android:background="?android:attr/selectableItemBackgroundBorderless"
            android:contentDescription="@string/resource_action_edit"
            android:padding="6dp"
            android:src="@drawable/ic_edit"
            android:tint="#FFFFFFFF" />

        <ImageButton
            android:id="@+id/deleteButton"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:background="?android:attr/selectableItemBackgroundBorderless"
            android:contentDescription="@string/resource_action_delete"
            android:padding="6dp"
            android:src="@drawable/ic_delete"
            android:tint="#FFFFFFFF" />
    </LinearLayout>
</LinearLayout>
