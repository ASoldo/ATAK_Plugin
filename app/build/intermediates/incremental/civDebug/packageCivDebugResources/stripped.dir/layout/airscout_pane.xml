<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#1A1C1F"
    android:padding="12dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/statusMessage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/status_no_cameras"
            android:textColor="@android:color/white"
            android:textSize="16sp"
            android:paddingBottom="8dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingBottom="8dp">

            <TextView
                android:id="@+id/selectedFeedLabel"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/status_no_cameras"
                android:textColor="@android:color/white"
                android:textSize="14sp" />

            <Button
                android:id="@+id/addCameraButton"
                style="@style/darkButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:text="@string/pane_add_video"
                android:contentDescription="@string/pane_add_video" />

            <Button
                android:id="@+id/removeCameraButton"
                style="@style/darkButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:text="@string/pane_remove_camera"
                android:contentDescription="@string/toast_camera_removed" />
        </LinearLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="#0DFFFFFF"
            android:foregroundGravity="center">

            <androidx.media3.ui.PlayerView
                android:id="@+id/videoPlayerView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#000000"
                android:keepScreenOn="true"
                app:resize_mode="fill"
                app:surface_type="texture_view"
                app:use_controller="false" />

            <com.walaris.airscout.ui.DualJoystickView
                android:id="@+id/joystickOverlay"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:alpha="0.95" />
        </FrameLayout>
    </LinearLayout>
</FrameLayout>
