<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#1A1C1F"
    android:padding="12dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ViewAnimator
            android:id="@+id/contentSwitcher"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:id="@+id/resourceListContainer"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:padding="4dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:padding="4dp">

                    <TextView
                        android:id="@+id/resourceListTitle"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/resource_list_title"
                        android:textColor="@android:color/white"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <ImageButton
                        android:id="@+id/addResourceButton"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:background="?android:attr/selectableItemBackgroundBorderless"
                        android:contentDescription="@string/resource_add_button"
                        android:padding="6dp"
                        android:src="@drawable/ic_add"
                        android:tint="#FFFFFFFF" />
                </LinearLayout>

                <TextView
                    android:id="@+id/resourceListSummary"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/resource_list_summary"
                    android:textColor="#B3FFFFFF"
                    android:textSize="14sp"
                    android:paddingStart="4dp"
                    android:paddingEnd="4dp"
                    android:paddingBottom="8dp" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/resourceRecyclerView"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:clipToPadding="false"
                    android:paddingBottom="4dp" />

                <TextView
                    android:id="@+id/emptyMessage"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:padding="16dp"
                    android:text="@string/resource_empty_message"
                    android:textColor="#80FFFFFF"
                    android:textSize="15sp"
                    android:visibility="gone" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/controlContainer"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:padding="4dp">

                <LinearLayout
                    android:id="@+id/controlHeader"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:padding="4dp">

                    <ImageButton
                        android:id="@+id/backButton"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:background="?android:attr/selectableItemBackgroundBorderless"
                        android:contentDescription="@string/resource_back_button"
                        android:padding="6dp"
                        android:src="@drawable/ic_arrow_back"
                        android:tint="#FFFFFFFF" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:paddingStart="8dp">

                        <TextView
                            android:id="@+id/controlTitle"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textColor="@android:color/white"
                            android:textSize="18sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/controlSubtitle"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:maxLines="2"
                            android:ellipsize="end"
                            android:textColor="#B3FFFFFF"
                            android:textSize="14sp" />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/controlInfoContainer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingStart="8dp"
                    android:paddingEnd="8dp"
                    android:paddingBottom="8dp">

                    <TextView
                        android:id="@+id/controlStreamInfo"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="#B3FFFFFF"
                        android:textSize="13sp"
                        android:drawablePadding="6dp"
                        android:paddingBottom="4dp"
                        android:drawableStart="@drawable/ic_stream"
                        android:text="@string/control_info_stream_placeholder" />

                    <TextView
                        android:id="@+id/controlControlInfo"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="#B3FFFFFF"
                        android:textSize="13sp"
                        android:drawablePadding="6dp"
                        android:paddingBottom="4dp"
                        android:drawableStart="@drawable/ic_control"
                        android:text="@string/control_info_control_placeholder" />

                    <TextView
                        android:id="@+id/controlLocationInfo"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="#B3FFFFFF"
                        android:textSize="13sp"
                        android:drawablePadding="6dp"
                        android:paddingBottom="4dp"
                        android:drawableStart="@drawable/ic_location"
                        android:text="@string/control_info_location_placeholder" />

                    <TextView
                        android:id="@+id/controlFrustumInfo"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="#B3FFFFFF"
                        android:textSize="13sp"
                        android:drawablePadding="6dp"
                        android:paddingBottom="4dp"
                        android:drawableStart="@drawable/ic_frustum"
                        android:text="@string/control_info_frustum_placeholder" />
                </LinearLayout>

                <TextView
                    android:id="@+id/statusMessage"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingStart="8dp"
                    android:paddingEnd="8dp"
                    android:paddingBottom="6dp"
                    android:textColor="@android:color/white"
                    android:textSize="14sp" />

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:background="#0DFFFFFF"
                    android:foregroundGravity="center">

                    <ImageView
                        android:id="@+id/videoImageView"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:adjustViewBounds="true"
                        android:background="#000000"
                        android:contentDescription="@string/status_selected_camera"
                        android:scaleType="fitCenter"
                        android:visibility="gone" />

                    <androidx.media3.ui.PlayerView
                        android:id="@+id/videoPlayerView"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="#000000"
                        android:keepScreenOn="true"
                        app:resize_mode="fit"
                        app:show_buffering="never"
                        app:surface_type="texture_view"
                        app:use_artwork="false"
                        app:use_controller="false" />

                    <com.walaris.airscout.ui.DualJoystickView
                        android:id="@+id/joystickOverlay"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:alpha="0.95" />
                </FrameLayout>
            </LinearLayout>
        </ViewAnimator>
    </LinearLayout>
</FrameLayout>
