<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <EditText
            android:id="@+id/inputName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/resource_field_name"
            android:inputType="textCapWords"
            android:maxLines="1"
            android:textColorHint="#80FFFFFF"
            android:textColor="@android:color/white" />

        <EditText
            android:id="@+id/inputDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:hint="@string/resource_field_description"
            android:inputType="textMultiLine"
            android:minLines="2"
            android:textColorHint="#80FFFFFF"
            android:textColor="@android:color/white" />

        <EditText
            android:id="@+id/inputStreamUrl"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:hint="@string/resource_field_stream"
            android:inputType="textUri"
            android:maxLines="1"
            android:textColorHint="#80FFFFFF"
            android:textColor="@android:color/white" />

        <EditText
            android:id="@+id/inputControlUrl"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:hint="@string/resource_field_control"
            android:inputType="textUri"
            android:maxLines="1"
            android:textColorHint="#80FFFFFF"
            android:textColor="@android:color/white" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/resource_field_coordinates"
                android:textColor="@android:color/white"
                android:textSize="14sp" />

            <Button
                android:id="@+id/useMapCenterButton"
                style="@style/darkButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/resource_use_map_center" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="1"
            android:layout_marginTop="4dp">

            <EditText
                android:id="@+id/inputLatitude"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="4dp"
                android:layout_weight="0.5"
                android:hint="@string/resource_field_latitude"
                android:inputType="numberDecimal|numberSigned"
                android:maxLines="1"
                android:textColorHint="#80FFFFFF"
                android:textColor="@android:color/white" />

            <EditText
                android:id="@+id/inputLongitude"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:layout_weight="0.5"
                android:hint="@string/resource_field_longitude"
                android:inputType="numberDecimal|numberSigned"
                android:maxLines="1"
                android:textColorHint="#80FFFFFF"
                android:textColor="@android:color/white" />
        </LinearLayout>

        <EditText
            android:id="@+id/inputAltitude"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:hint="@string/resource_field_altitude"
            android:inputType="numberDecimal|numberSigned"
            android:maxLines="1"
            android:textColorHint="#80FFFFFF"
            android:textColor="@android:color/white" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text="@string/resource_field_frustum_mode"
            android:textColor="@android:color/white"
            android:textSize="14sp" />

        <RadioGroup
            android:id="@+id/inputFrustumGroup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/radioFrustumCircle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/resource_frustum_circle"
                android:textColor="@android:color/white" />

            <RadioButton
                android:id="@+id/radioFrustumCone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:text="@string/resource_frustum_cone"
                android:textColor="@android:color/white" />
        </RadioGroup>

        <LinearLayout
            android:id="@+id/circleFields"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="8dp">

            <EditText
                android:id="@+id/inputRadius"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/resource_field_radius"
                android:inputType="numberDecimal"
                android:maxLines="1"
                android:textColorHint="#80FFFFFF"
                android:textColor="@android:color/white" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/coneFields"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="8dp"
            android:visibility="gone">

            <EditText
                android:id="@+id/inputRange"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/resource_field_range"
                android:inputType="numberDecimal"
                android:maxLines="1"
                android:textColorHint="#80FFFFFF"
                android:textColor="@android:color/white" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:orientation="horizontal"
                android:weightSum="1">

                <EditText
                    android:id="@+id/inputHorizontalFov"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="4dp"
                    android:layout_weight="0.5"
                    android:hint="@string/resource_field_hfov"
                    android:inputType="numberDecimal"
                    android:maxLines="1"
                    android:textColorHint="#80FFFFFF"
                    android:textColor="@android:color/white" />

                <EditText
                    android:id="@+id/inputVerticalFov"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="4dp"
                    android:layout_weight="0.5"
                    android:hint="@string/resource_field_vfov"
                    android:inputType="numberDecimal"
                    android:maxLines="1"
                    android:textColorHint="#80FFFFFF"
                    android:textColor="@android:color/white" />
            </LinearLayout>

            <EditText
                android:id="@+id/inputBearing"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:hint="@string/resource_field_bearing"
                android:inputType="numberDecimal|numberSigned"
                android:maxLines="1"
                android:textColorHint="#80FFFFFF"
                android:textColor="@android:color/white" />
        </LinearLayout>
    </LinearLayout>
</ScrollView>
